    "version": "0.2.0",
    "configurations": [
        {
            "name": "RunInference_gcn",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_inference.py",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES" : "1"
            },
            "args":[
                "--note", "pretrain", 
                "--dropout", "0",
                "--lr", "2e-2",
                "--epochs", "100",
                "--posenet_name", "gcn",
                "--checkpoint", "./checkpoint/pretrain_baseline",
                "--keypoints", "gt"
            ]
        },
